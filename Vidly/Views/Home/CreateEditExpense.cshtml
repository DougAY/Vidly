@{
    ViewData["Title"] = "Create /Edit";
}
@model Vidly.Models.Expense
<div class="text-center">
    <h1 class="display-4">Create /Edit an expense</h1>
</div>
<form asp-action="CreateEditExpenseForm">
    
    <input hidden class action="form-control" type = "number" placeholder = "0" asp-for="Id"/>
    <label class = "mt-4">Amount</label>
    <input class action="form-control" type = "number" placeholder = "0" asp-for="Value" step ="0.01"/>
    <label class = "mt-4">Description</label>
    <input class action="form-control" type = "text" placeholder = "Add a description" asp-for="Description"/>

    <button class = "btn btn-primary" type = "submit"> Submit </button>

</form>
